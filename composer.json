{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "ironflow/halo-ui",
    "description": "A modular UI component library for Laravel, powered by Blade, Tailwind, and Alpine.js.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "blade",
        "tailwind",
        "alpinejs",
        "components",
        "haloui",
        "design",
        "framework",
        "halo",
        "template",
        "modular"
    ],
    "authors": [
        {
            "name": "Aure Dulvresse",
            "email": "ironflow.framework@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "blade-ui-kit/blade-icons": "^1.0",
        "illuminate/console": "^12.0",
        "illuminate/filesystem": "^12.0",
        "illuminate/support": "^12.0",
        "illuminate/view": "^12.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Halo\\UI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Halo\\UI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Halo\\UI\\HaloUIServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}

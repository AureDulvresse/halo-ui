{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "halo/ui",
    "description": "Modern, composable Blade UI component library for Laravel 12+ powered by TailwindCSS, Alpine.js, and Blade Icons",
    "keywords": [
        "laravel",
        "blade",
        "ui",
        "components",
        "tailwind",
        "alpine",
        "blade-icons",
        "halo-ui"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Aure Dulvresse",
            "email": "ironflow.framework@gmail.com"
        }
    ],
    "version": "3.0.0",
    "require": {
        "php": "^8.2",
        "illuminate/support": "^12.0",
        "illuminate/view": "^12.0",
        "illuminate/console": "^12.0",
        "blade-ui-kit/blade-icons": "^1.6"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "Halo\\UI\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Halo\\UI\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Halo\\UI\\Providers\\HaloServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}